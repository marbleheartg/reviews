{
  "name": "reviews",
  "module": "index.ts",
  "private": true,
  "scripts": {
    "fork": "clear && dotenv bunx hardhat node --fork https://base-mainnet.g.alchemy.com/v2/$ALCHEMY_API_KEY --fork-block-number 31564648",
    "test": "clear && bunx hardhat test",
    "dev": "clear && bun run compile && bun run deploy && bun run tunnel",
    "compile": "clear && bunx hardhat compile",
    "deploy": "clear && bunx hardhat ignition deploy ignition/modules/Reviews.ts --network localhost",
    "tunnel": "clear && cloudflared tunnel --url http://localhost:8545"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^4.1.0",
    "@types/bun": "latest",
    "dotenv-cli": "^8.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@types/mocha": "^10.0.10",
    "dotenv": "^17.2.2",
    "hardhat": "^2.26.0",
    "viem": "^2.33.0"
  }
}
